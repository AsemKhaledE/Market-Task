@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer localizer
@model Market.Models.User
@{
    ViewData["Title"] = "Create";
}
<!DOCTYPE html>
<html lang="en">


<section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-6 col-xl-4 order-2 order-lg-1">
                <p class="text-center h1 fw-bold mb-4 mx-1 mx-md-4 mt-4">@localizer["SignUp"]</p>

                <form asp-action="Create" class="mx-1 mx-md-4">

                    <div class="d-flex flex-row align-items-center mb-3">
                        <div class="form-outline flex-fill mb-0">
                            <input asp-for="FullName" placeholder="@localizer["FullName"]" id="form3Example1c" class="form-control" />
                            <span class="text-danger" @Html.ValidationMessageFor(model => model.FullName)></span>
                        </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-3">
                        <div class="form-outline flex-fill mb-0">
                            <input asp-for="UserName" placeholder="@localizer["UserName"]" id="form3Example3c" class="form-control" />
                            <span class="text-danger" @Html.ValidationMessageFor(model => model.UserName)></span>
                        </div>
                    </div>
                    <div class="d-flex flex-row align-items-center mb-3">
                        <div class="form-outline flex-fill mb-0">
                            <input asp-for="Email" placeholder="@localizer["Email"]" id="form3Example3c" class="form-control" />
                            <span class="text-danger" @Html.ValidationMessageFor(model => model.Email)></span>
                        </div>
                    </div>
                    <div class="d-flex flex-row align-items-center mb-3">
                        <div class="form-outline flex-fill mb-0">
                            <i class="login_icon fas fa-lock"></i>
                            <input asp-for="Password" placeholder="@localizer["Password"]" class="form-control" />
                            <span class="text-danger" @Html.ValidationMessageFor(model => model.Password)></span>
                        </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-3">
                        <div class="form-outline flex-fill mb-0">
                            <input asp-for="Phone" placeholder="@localizer["Phone"]" id="form3Example4c" class="form-control" />
                            <span class="text-danger" @Html.ValidationMessageFor(model => model.Phone)></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-2">
                        <button type="submit" value="Create" class="btn btn-primary btn-lg">@localizer["Register"]</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</section>